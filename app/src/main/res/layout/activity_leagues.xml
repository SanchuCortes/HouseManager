<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_field_enhanced"
    tools:context=".LeaguesActivity">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_blue"
            app:titleTextColor="@color/white"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- RecyclerView para las ligas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_leagues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:listitem="@layout/item_league" />

            <!-- Estado vacío -->
            <LinearLayout
                android:id="@+id/empty_state_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <!-- Icono de estado vacío - TROFEO ROTO DORADO -->
                <ImageView
                    android:id="@+id/empty_state_icon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_trophy_broken"
                    android:layout_marginBottom="24dp" />

                <!-- Título DORADO -->
                <TextView
                    android:id="@+id/empty_state_title"
                    style="@style/TextTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Ups! Aún no hay ligas"
                    android:textColor="@color/accent_gold"
                    android:textAlignment="center"
                    android:layout_marginBottom="12dp" />

                <!-- Subtítulo -->
                <TextView
                    android:id="@+id/empty_state_subtitle"
                    style="@style/TextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crea tu primera liga o únete a una existente para empezar a jugar"
                    android:textAlignment="center"
                    android:textColor="@color/gray_light"
                    android:layout_marginBottom="32dp" />

                <!-- Botones -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Botón para crear liga -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_create_league_empty"
                        style="@style/ButtonPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crear Nueva Liga"
                        android:layout_marginBottom="12dp"
                        app:icon="@drawable/ic_add"
                        app:iconTint="@color/white" />

                    <!-- Botón para unirse a liga -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_join_league_empty"
                        style="@style/ButtonSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unirse a Liga"
                        app:icon="@drawable/ic_group_add"
                        app:iconTint="@color/secondary_green" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>