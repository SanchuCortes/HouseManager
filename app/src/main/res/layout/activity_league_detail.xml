<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_field_enhanced"
    tools:context=".LeagueDetailActivity">

    <!-- AppBar con nombre de la liga -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/primary_blue"
            app:navigationIcon="@drawable/ic_menu"
            app:navigationIconTint="@color/white">

            <!-- Header personalizado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingEnd="16dp">

                <!-- Nombre de la liga centrado -->
                <TextView
                    android:id="@+id/tv_league_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Liga Premium"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginStart="48dp" />

                <!-- Icono de invitar -->
                <ImageView
                    android:id="@+id/iv_invite_friends"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_person_add"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    app:tint="@color/white"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dropdown para filtrar jornadas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="space_between">

                <!-- Dropdown jornadas -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/layout_matchday_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/tv_matchday"
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jornada 15"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:rotation="90"
                            app:tint="@color/text_dark" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Header del usuario con su posición -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Posición y avatar -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Número de posición -->
                        <TextView
                            android:id="@+id/tv_user_position"
                            style="@style/TextTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/accent_gold"
                            android:textSize="28sp"
                            android:layout_marginEnd="12dp" />

                        <!-- Avatar del usuario -->
                        <ImageView
                            android:id="@+id/iv_user_avatar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_person"
                            android:background="@drawable/circle_background_green_light"
                            android:padding="8dp"
                            android:layout_marginEnd="12dp" />

                    </LinearLayout>

                    <!-- Info del usuario -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_user_name"
                            style="@style/TextSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manager"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:layout_marginBottom="2dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_euro"
                                app:tint="@color/accent_gold"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/tv_user_money"
                                style="@style/TextSecondary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="67.4M €"
                                android:textColor="@color/gray_medium"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Puntos del usuario -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/tv_user_points"
                            style="@style/TextTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/accent_gold"
                            android:textSize="24sp" />

                        <TextView
                            style="@style/TextSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PUNTOS"
                            android:textSize="10sp"
                            android:textColor="@color/gray_medium" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Estado de la liga -->
            <LinearLayout
                android:id="@+id/layout_league_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="visible">

                <!-- Icono de estado -->
                <ImageView
                    android:id="@+id/iv_league_state"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_trophy"
                    android:background="@drawable/circle_background_green_light"
                    android:padding="20dp"
                    app:tint="@color/accent_gold"
                    android:layout_marginBottom="16dp" />

                <!-- Mensaje principal -->
                <TextView
                    android:id="@+id/tv_league_state_message"
                    style="@style/TextBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tu liga necesita rivales"
                    android:textColor="@color/text_dark"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Submensaje -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="La competición empieza con más managers"
                    android:textColor="@color/gray_medium"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_marginBottom="24dp" />

                <!-- Botón de acción -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_invite_friends"
                    style="@style/ButtonPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invitar Managers"
                    android:paddingHorizontal="32dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/card_background"
        app:itemIconTint="@color/secondary_green"
        app:itemTextColor="@color/text_dark"
        app:menu="@menu/bottom_nav_league"
        app:labelVisibilityMode="labeled" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>