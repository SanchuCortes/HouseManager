<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_field_enhanced"
    android:padding="32dp"
    tools:context=".LoginActivity">

    <!-- Logo y título superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="48dp">

        <!-- Logo de la app -->
        <ImageView
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginBottom="32dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/homefield_logo" />

        <!-- Subtítulo -->
        <TextView
            style="@style/TextSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu campo en casa"
            android:textSize="16sp"
            android:textAlignment="center" />

    </LinearLayout>

    <!-- Card de login -->
    <com.google.android.material.card.MaterialCardView
        style="@style/CardPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título del login -->
            <TextView
                style="@style/TextSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:textColor="@color/accent_gold"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center" />

            <!-- Campo Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/secondary_green"
                app:hintTextColor="@color/gray_medium"
                app:boxBackgroundColor="@color/gray_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/text_dark"
                    android:textColorHint="@color/gray_medium" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/secondary_green"
                app:hintTextColor="@color/gray_medium"
                app:boxBackgroundColor="@color/gray_light"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/secondary_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:textColor="@color/text_dark"
                    android:textColorHint="@color/gray_medium" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón Login -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                style="@style/ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:layout_marginBottom="16dp" />

            <!-- Enlace para registro -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp">

                <TextView
                    style="@style/TextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿No tienes cuenta? "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_register"
                    style="@style/TextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regístrate"
                    android:textColor="@color/accent_gold"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Enlace "¿Olvidaste tu contraseña?" -->
            <TextView
                android:id="@+id/tv_forgot_password"
                style="@style/TextSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="@color/accent_gold"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Divisor -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/gray_medium" />

        <TextView
            style="@style/TextSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o continúa con"
            android:layout_marginHorizontal="16dp"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/gray_medium" />

    </LinearLayout>

    <!-- Botón Google Sign-In -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_google_signin"
        style="@style/ButtonSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuar con Google"
        app:icon="@drawable/ic_google"
        app:iconTint="@null"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconSize="20dp" />

</LinearLayout>